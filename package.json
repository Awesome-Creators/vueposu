{
  "name": "vueposu-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.3.8-3",
  "description": "Monorepo by Vueposu",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && rimraf vueposu/dist && webpack -c ./webpack.config.js",
    "format": "prettier --write \"src/**/*.{ts,vue,tsx}\" \"test/**/*.{ts,vue,tsx}\" --vue-indent-script-and-styl",
    "format:dist": "prettier --write \"dist/**/*.{js,d.ts}\"",
    "prerelease": "yarn test",
    "release": "node ./scripts/release.js",
    "test": "jest -w 1",
    "test:ci": "jest -w 1 --coverage --collectCoverage=true --verbose --collectCoverageFrom='<rootDir>/packages/**/*.{js,ts}'",
    "test:ci-open": "yarn test:ci && open ./coverage/lcov-report/index.html",
    "docker:start": "docker run -it -v $(pwd):/app -w /app node bash"
  },
  "dependencies": {
    "vue-demi": "^0.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/jest": "^26.0.10",
    "@types/lodash-es": "^4.17.3",
    "@types/mathjs": "^6.0.5",
    "@vue/compiler-sfc": "^3.0.0-rc.7",
    "@vue/test-utils": "^2.0.0-beta.3",
    "babel-core": "^7.0.0-bridge.0",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "execa": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "lodash-es": "^4.17.15",
    "open": "^7.2.1",
    "prettier": "^2.0.5",
    "prompts": "^2.4.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.12",
    "typescript": "^4.0.2",
    "vue": "^3",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "yarn format"
    ]
  },
  "peerDependencies": {
    "@vue/composition-api": "^latest",
    "vue": "^2.0.0 || >=3.0.0"
  }
}
